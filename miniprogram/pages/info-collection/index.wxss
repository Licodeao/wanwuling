.container {
  width: 100%;
}

.container .radioGroup {
  width: 100%;
  padding: 20rpx 32rpx;
}

.container .checkGroup {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .checkGroup .checkbox-row {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0rpx;
  gap: 40rpx;
}

.container .checkGroup .checkbox-row .van-check {
  flex: 1;
  text-align: center;
}

.van-divider {
  margin-top: 0rpx !important;
  margin-bottom: 0rpx !important;
}

.container .save-btn {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}
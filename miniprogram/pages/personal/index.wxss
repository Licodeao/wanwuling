.container .top {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 50rpx;
}

.container .top .fields .checkGroup {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .top .fields .checkGroup .checkbox-row {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0rpx;
  gap: 40rpx;
}

.container .top .fields .checkGroup .checkbox-row .van-check {
  flex: 1;
  text-align: center;
}

.container .btn {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}

.container .avatar-wrapper {
  width: 200rpx;
  height: 200rpx;
  border-radius: 999rpx;
  background-color: #D3D5D1;
  padding: 0rpx;
}

.container .avatar-wrapper .avatar {
  width: 100%;
  height: 100%;
}
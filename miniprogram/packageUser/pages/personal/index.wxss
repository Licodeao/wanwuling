.container .top {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 50rpx;
}

.container .top .fields .preference {
  width: 100%;
  margin-top: 20rpx;
}

.container .top .fields .preference .options {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.container .btn {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}

.container .avatar-wrapper {
  width: 200rpx;
  height: 200rpx;
  border-radius: 999rpx;
  background-color: #D3D5D1;
  padding: 0rpx;
}

.container .avatar-wrapper .avatar {
  width: 100%;
  height: 100%;
}
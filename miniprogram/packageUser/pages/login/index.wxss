.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  gap: 80rpx;
}

.container .logo {
  margin-top: 30%;
}

.container .words {
  font-size: 40rpx;
  font-weight: bold;
}
.container .login-btn .btn-wrapper {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
}

.container .login-btn {
  width: 90%;
  border-radius: 40rpx;
  background-color: #479bfc;
  color: #fff;
  border-top: 1rpx solid #fff;
  border-bottom: 1rpx solid #fff;
}

.container .tips {
  color: #666;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
  margin-top: -70rpx;
}
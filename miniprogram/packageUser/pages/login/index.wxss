.container {
  position: relative;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.container .logo {
  margin-top: 40%;
}

.container .words {
  width: 500rpx;
  height: 40rpx;
  margin-top: 48rpx;
}

.container .login-btn .btn-wrapper {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.container .login-btn {
  width: 90%;
  border-radius: 40rpx;
  background-color: #479bfc;
  color: #fff;
  border-top: 1rpx solid #fff;
}


.container {
  position: relative;
  height: 100vh;
  width: 100%;
  overflow: hidden;
}

.container .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.container .content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding: 75rpx 50rpx;
}

.container .content .topText {
  width: 100%;
  height: 200rpx !important;
  margin-left: -43rpx;
}

.container .content .info {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-top: 80rpx;
  gap: 90rpx;
}

.container .content .info .mode {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.container .content .info .mode .mode-select {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  gap: 30rpx;
}

.container .content .info .area {
  width: 100%;
}

.container .content .info .preference {
  width: 100%;
}

.container .content .info .preference .options {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 30rpx 10rpx;
}
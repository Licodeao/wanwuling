.container {
  position: relative;
  height: 100vh;
  width: 100%;
  overflow: hidden;
}

.container .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.container .content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding: 75rpx 50rpx;
}

.container .content .words{
  margin-top: -50rpx;
}

.container .content .hi {
  width: 330rpx !important;
  height: 200rpx !important;
  margin-left: -75rpx;
}

.container .content .avatar {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
}

.container .content .avatar image:nth-child(2) {
  position: absolute;
  right: 235rpx;
  bottom: 60rpx;
  z-index: 1;
}

.container .avatar .avatar-wrapper {
  width: 200rpx;
  height: 200rpx;
  border-radius: 999rpx;
  background-color: #D3D5D1;
  padding: 0rpx;
}

.container .avatar .avatar-wrapper::after {
  border: none !important;
}

.container .avatar .avatar-wrapper .default-avatar {
  width: 100%;
  height: 100%;
}

.container .content .info {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  gap: 50rpx;
  margin-top: -20rpx;
}

.container .content .info .name {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.container .content .info .sex .options {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.opt-img {
  width: 210rpx;
  height: 100rpx;
}

.container .content .arrow {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin: 20rpx 0;
}

.container .radioGroup {
  width: 100%;
  padding: 20rpx 32rpx;
}

.container .checkGroup {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .checkGroup .checkbox-row {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0rpx;
  gap: 40rpx;
}

.container .checkGroup .checkbox-row .van-check {
  flex: 1;
  text-align: center;
}

.van-divider {
  margin-top: 0rpx !important;
  margin-bottom: 0rpx !important;
}

.container .save-btn {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}
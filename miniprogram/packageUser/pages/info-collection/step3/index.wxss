.container {
  position: relative;
  height: 100vh;
  width: 100%;
  overflow: hidden;
}

.container .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.container .content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding: 75rpx 50rpx;
}

.container .content .title {
  width: 100%;
  height: 200rpx !important;
  margin-left: -40rpx;
}

.container .content .words{
  margin-top: -25rpx;
}

.container .content .info {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  gap: 70rpx;
  margin-top: 80rpx;
}

.container .content .info .science {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.container .content .info .science .top {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.container .content .info .science .aim {
  width: 100%;
}

.container .content .info .science .subjects,
.container .content .info .language .subjects {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  font-family: 'SmileySans';
  gap: 18rpx;
}

.container .content .info .science .subjects .opt,
.container .content .info .language .subjects .opt {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.container .content .info .language .top {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}